{% extends 'base.html.twig' %}

{% set title = 'Plano de Patrocínio' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="my-4 mx-2">

        <div class="table-responsive">
            <table class="table text-nowrap">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome Interno</th>
                    <th scope="col">Nome Comercial</th>
                    <th scope="col">Valor Mínimo</th>
                    <th scope="col">Múltiplos</th>
                </tr>
                </thead>
                <tbody>
                {% for plan in plans %}
                    <tr>
                        <th scope="row">{{ plans.id }}</th>
                        <td>{{ plan.administrativeName }}</td>
                        <td>{{ plan.commercialName }}</td>
                        <td>{{ plan.minimumValue }}</td>
                        <td>{{ plan.valueMultiple }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {% if plans|length == 0 %}
            <p class="ml-4">Nenhum plano cadastrado.</p>
        {% endif %}

    </div>
{% endblock %}

{% block body_end %}
    <div class="app-page-end">
        <a class="mdc-fab mdc-fab--extended" href="#">
            <span class="material-icons mdc-fab__icon">add</span>
            <span class="mdc-fab__label">Criar Plano</span>
        </a>
    </div>
{% endblock %}