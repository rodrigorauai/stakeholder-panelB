{% set active = drawer_active_route|default('withdraw__index') %}

{% set items = [
    {
        route: 'withdraw__index',
        icon: 'attach_money',
        label: 'Retiradas',
    }, {
        route: 'payment__index',
        icon: 'rotate_left',
        label: 'Rendimentos',
    }, {
        route: 'stakehold_plan__index',
        icon: 'assignment',
        label: 'Planos de Patroc√≠nio',
    }, {
        route: 'person__index',
        icon: 'people',
        label: 'Pessoas',
    }, {
        route: 'company__index',
        icon: 'store_mall_directory',
        label: 'Empresas',
    },
] %}

<aside class="mdc-drawer mdc-drawer--dismissible">
    <div class="mdc-drawer__header">
        <div class="mdc-drawer__header__content">
            <h3 class="mdc-drawer__title">
                <img src="{{ asset('static/img/logo-adinvest.png') }}" alt="AdInvest">
            </h3>
        </div>
    </div>
    <div class="mdc-drawer__content">
        <div class="mdc-list">

            {% for item in items %}
                <a class="mdc-list-item {% if item.route == active %}mdc-list-item--activated{% endif %}" href="{{ path(item.route) }}">
                    <i class="material-icons mdc-list-item__graphic" aria-hidden="true">{{ item.icon }}</i>
                    <span class="mdc-list-item__text">{{ item.label }}</span>
                </a>
            {% endfor %}

        </div>
    </div>
</aside>