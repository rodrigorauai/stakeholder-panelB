{% extends 'base.html.twig' %}

{% set title = person.name ~ ' - Cargos' %}
{% set drawer_active_route = 'person__index' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="container m-4">
        <p>Informe os cargos exercidos por {{ person.name }}.</p>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="form-row button-container">
            {% include '_components/button/button.html.twig' with { label: 'Atualizar Cargos', type: 'submit', style: 'outlined'} only %}
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

