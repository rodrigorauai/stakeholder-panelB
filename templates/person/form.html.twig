{% extends 'base.html.twig' %}

{% set title = 'Cadastrar pessoa' %}
{% set drawer_active_route = 'person__index' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="container m-4">
        <p>Informe os dados da pessoa a ser cadastrada no sistema.</p>
        {{ form_start(form) }}
        {{ form_row(form.name, {
            attr: {
                autofocus: ''
            }
        }) }}
        {{ form_widget(form) }}
        <div class="form-row button-container">
            {% include '_components/button/button.html.twig' with { label: 'Cadastrar pessoa', type: 'submit', style: 'outlined'} only %}
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

