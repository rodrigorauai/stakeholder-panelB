{% extends 'base.html.twig' %}
{% set title = 'Retiradas' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="my-4 mx-2">
        <div class="table-responsive">
            <table class="table text-nowrap">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Status</th>
                    <th scope="col" class="text-right">Valor</th>
                    <th scope="col">Proprietário da Conta</th>
                    <th scope="col">Data de Realização</th>
                </tr>
                </thead>
                <tbody>
                {% for withdraw in withdraws %}
                    <tr>
                        <th scope="row">{{ withdraw.id }}</th>
                        <td>{{ withdraw.status|trans }}</td>
                        <td class="text-right">R$ {{ withdraw.value|number_format(2, ',', '.') }}</td>
                        <td>{{ withdraw.account.owner.name }}</td>
                        <td>{{ withdraw.operationTimestamp ? withdraw.operationTimestamp.format('d/m/Y H:i:s') : '' }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
