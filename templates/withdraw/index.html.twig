{% extends 'base.html.twig' %}
{% set title = 'Retiradas' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="my-4 mx-2">
        <div class="table-responsive">
            <table class="table text-nowrap">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Status</th>
                    <th scope="col" class="text-right">Valor</th>
                    <th scope="col">Proprietário da Conta</th>
                    <th scope="col">Comprovante</th>
                    <th scope="col">Data de Execução</th>
                </tr>
                </thead>
                <tbody>
                {% for withdraw in withdraws %}
                    <tr>
                        <th scope="row">{{ withdraw.id }}</th>
                        <td>
                            {{ withdraw.status|trans }}
                        </td>
                        <td class="text-right">R$ {{ withdraw.value|number_format(2, ',', '.') }}</td>
                        <td>{{ withdraw.account.owner.name }}</td>
                        <td>
                            {% if withdraw.wasExecuted %}
                                {% if withdraw.receipts|length > 0 %}
                                    <a href="{{ path('withdraw__receipt__download', { id: withdraw.id }) }}"
                                        target="_blank">
                                        Comprovante{#
                                        #}<span class="material-icons icon-small align-supper">open_in_new</span>
                                    </a>
                                {% else %}
                                    <a href="#">Registrar</a>
                                {% endif %}
                            {% else %}

                            {% endif %}
                        </td>
                        <td>
                            {% if withdraw.wasExecuted %}
                                {{ withdraw.executionTimestamp.format('d/m/Y H:i:s') }}
                            {% else %}
                                <a href="{{ path('withdraw__register_execution', { id: withdraw.id}) }}">
                                    Registrar Execução
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
