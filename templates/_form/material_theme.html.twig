{% block choice_label %}{% endblock %}
{% block choice_widget %}
    <div class="mdc-select mdc-select--outlined">
        <i class="mdc-select__dropdown-icon"></i>
        <select id="outlined" class="mdc-select__native-control" name="{{ full_name }}">
            {% for choice in choices %}
                <option value="{{ choice.value }}" {{ choice.value == value ? 'selected' : '' }}>{{ choice.label }}</option>
            {% endfor %}
        </select>
        <div class="mdc-notched-outline mdc-notched-outline--upgraded mdc-notched-outline--notched">
            <div class="mdc-notched-outline__leading"></div>
            <div class="mdc-notched-outline__notch">
                <label for="outlined" class="mdc-floating-label mdc-floating-label--float-above" style="">{{ label|trans }}</label>
            </div>
            <div class="mdc-notched-outline__trailing"></div>
        </div>
    </div>
{% endblock %}