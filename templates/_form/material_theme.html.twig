{% block form_row %}
    <div class="form-row">
        {{ form_widget(form) }}

        {% for error in errors %}
            <p class="form-error text-danger">{{ error.message }}</p>
        {% endfor %}
    </div>
{% endblock %}

{% block text_label %}{% endblock %}
{% block text_widget %}
    <div class="mdc-text-field mdc-text-field--outlined">
        <input type="text"
               class="mdc-text-field__input"
               id="{{ id }}"
               name="{{ full_name }}"
               value="{{ value }}"
               {% if required %}required{% endif %}
               {% for key, value in attr %}
                   {{ key }}="{{ value }}"
               {% endfor %}
        >
        <div class="mdc-notched-outline">
            <div class="mdc-notched-outline__leading"></div>
            <div class="mdc-notched-outline__notch">
                <label class="mdc-floating-label" for="{{ id }}">{{ label|trans }}</label>
            </div>
            <div class="mdc-notched-outline__trailing"></div>
        </div>
    </div>
{% endblock %}

