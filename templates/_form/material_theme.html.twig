{% block choice_label %}{% endblock %}
{% block choice_widget %}
    {% if not expanded %}
        <div class="mdc-select mdc-select--outlined">
            <i class="mdc-select__dropdown-icon"></i>
            <select id="outlined"
                    class="mdc-select__native-control"
                    name="{{ full_name }}"
                    {% if required %}required{% endif %}
            >
                <option value="" disabled selected></option>
                {% for choice in choices %}
                    <option value="{{ choice.value }}" {{ choice.value == value ? 'selected' : '' }}>{{ choice.label }}</option>
                {% endfor %}
            </select>
            <div class="mdc-notched-outline mdc-notched-outline--upgraded mdc-notched-outline--notched">
                <div class="mdc-notched-outline__leading"></div>
                <div class="mdc-notched-outline__notch">
                    <label for="outlined" class="mdc-floating-label mdc-floating-label--float-above" style="">{{ label|trans }}</label>
                </div>
                <div class="mdc-notched-outline__trailing"></div>
            </div>
        </div>
    {% else %}

        {{ block('choice_widget_expanded') }}

    {% endif %}
{% endblock %}

{% block choice_widget_expanded %}
    <ul class="mdc-list" id="{{ id }}_list">

        {% for child in form %}
            <li class="mdc-list-item" tabindex="0">
                {{ form_widget(child) }}
                {{ form_label(child, null, {translation_domain: choice_translation_domain}) }}
            </li>
        {% endfor %}

    </ul>
{% endblock %}

{% block radio_widget %}
    <div class="mdc-list-item__graphic">
        <div class="mdc-radio">
            <input type="radio"
                   class="mdc-radio__native-control"
                {{ block('widget_attributes') }}
                {% if value is defined %} value="{{ value }}"{% endif %}
                {% if checked %} checked="checked"{% endif %}>
            <div class="mdc-radio__background">
                <div class="mdc-radio__outer-circle"></div>
                <div class="mdc-radio__inner-circle"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block radio_label %}
    <label class="mdc-list-item__text"
           for="{{ id }}"
           {% if label_attr %}{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}{% endif %}
           >{{ label }}</label>
{% endblock %}

{% block textarea_label %}{% endblock %}
{% block textarea_widget %}
    <div class="mdc-text-field mdc-text-field--textarea">
        <div class="mdc-text-field-character-counter">0 / 255</div>
        <textarea id="{{ id }}" name="{{ full_name }}" class="mdc-text-field__input" rows="2" cols="80" maxlength="255">{{ value }}</textarea>
        <div class="mdc-notched-outline">
            <div class="mdc-notched-outline__leading"></div>
            <div class="mdc-notched-outline__notch">
                <label for="{{ id }}" class="mdc-floating-label">{{ label }}</label>
            </div>
            <div class="mdc-notched-outline__trailing"></div>
        </div>
    </div>
{% endblock %}

{% block checkbox_label %}{% endblock %}
{% block checkbox_widget %}
    <div class="mdc-switch {% if disabled %} mdc-switch--disabled {% endif %}">
        <div class="mdc-switch__track"></div>
        <div class="mdc-switch__thumb-underlay">
            <div class="mdc-switch__thumb">
                <input type="checkbox"
                       id="{{ id }}"
                       class="mdc-switch__native-control"
                       role="switch"
                       name="{{ full_name }}"
                       value="{{ value }}"
                        {% if checked %} checked {% endif %}
                        {% if disabled %} disabled {% endif %}
                >
            </div>
        </div>
    </div>
    <label for="{{ id }}">{{ label }}</label>
{% endblock %}